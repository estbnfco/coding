print("Hola, Bienvenido")
print("que operacion necesita?")

operador = input("+,*,/,-,%")

a = input("Favor de ingresar numero a?")
if a.isdigit():
    print("numero ingresado es valido")
if not a.isdigit(): #else
    print("numero ingresado es invalido")

b = input("Por Ultimo, numero b?")
if b.isdigit():
    print("numero ingresado es valido")
if not b.isdigit(): #else
    print("numero ingresado es invalido")

if operador == "*":
    print(int(a)*int(b))
 
elif operador == "+":
    print(int(a)+int(b))
 
elif operador == "-":
    print(int(a)-int(b))
 
elif operador == "/":
    print(int(a)/int(b))

elif operador == "%":
    print(int(a)/int(b))
#aca sacaria porcentaje en python
else:
    print("Operador invalido: " + operador)



